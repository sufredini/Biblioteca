@model Biblioteca.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-lg mt-5" style="background: linear-gradient(135deg, #232526 0%, #414345 100%); border-radius: 18px;">
            <div class="card-header text-center" style="background: #1f1f1f; border-top-left-radius: 18px; border-top-right-radius: 18px;">
                <h2 class="mb-0 text-light">Excluir Usuário</h2>
            </div>
            <div class="card-body text-light">
                <h5 class="text-danger text-center mb-4" style="font-weight: bold;">Tem certeza que deseja excluir este usuário?</h5>
                <dl class="row">
                    <dt class="col-sm-4">Nome</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NomeCompleto)</dd>

                    <dt class="col-sm-4">CPF</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CPF)</dd>

                    <dt class="col-sm-4">Celular</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Celular)</dd>

                    <dt class="col-sm-4">Nascimento</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

                    <dt class="col-sm-4">Foto</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.UrlFoto))
                        {
                            <img src="@Model.UrlFoto" alt="Foto" class="img-thumbnail border-0 shadow" style="width: 80px; height: 80px; object-fit: cover; border-radius: 50%;" />
                        }
                        else
                        {
                            <span class="text-muted">Sem foto</span>
                        }
                    </dd>

                    <dt class="col-sm-4">ID do Usuário</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AppUserId)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="UsuarioId" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn" style="background: linear-gradient(90deg, #ff512f 0%, #dd2476 100%); color: #fff; font-weight: bold; border-radius: 8px; min-width: 120px;">
                            <i class="bi bi-trash3"></i> Excluir
                        </button>
                        <a asp-action="Index" class="btn btn-outline-light" style="border-radius: 8px; min-width: 120px;">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
