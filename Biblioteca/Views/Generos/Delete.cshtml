@model Biblioteca.Models.Genero

@{
    ViewData["Title"] = "Excluir Gênero";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h2>Excluir Gênero</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger text-center fw-bold mb-4">
                        Tem certeza que deseja excluir este gênero? Esta ação não poderá ser desfeita.
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="GeneroId" />
                        <div class="d-flex justify-content-center gap-3">
                            <input type="submit" value="Excluir" class="btn btn-danger btn-lg px-4" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
