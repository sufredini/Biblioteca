@model IEnumerable<Biblioteca.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Lista de Gêneros</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3 text-end">
                        <a asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Novo Gênero
                        </a>
                    </div>
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-sm btn-warning me-1">Editar</a>
                                        <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-sm btn-danger">Excluir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
