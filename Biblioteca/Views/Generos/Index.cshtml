@model IEnumerable<Biblioteca.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Lista de Gêneros</h3>
                    <a asp-action="Create" class="btn btn-sm btn-dark">
                        <i class="bi bi-plus-circle"></i> Novo Gênero
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                                    <th class="text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-sm btn-dark me-1" title="Editar">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-sm btn-dark" title="Excluir">
                                                <i class="bi bi-trash"></i> Excluir
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
