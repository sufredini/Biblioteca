@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Editar Livro";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Editar Livro</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="LivroId" />

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Autor" class="form-label"></label>
                            <input asp-for="Autor" class="form-control" />
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Editora" class="form-label"></label>
                            <input asp-for="Editora" class="form-control" />
                            <span asp-validation-for="Editora" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DataPublicacao" class="form-label"></label>
                            <input asp-for="DataPublicacao" class="form-control" />
                            <span asp-validation-for="DataPublicacao" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NumeroPaginas" class="form-label"></label>
                            <input asp-for="NumeroPaginas" class="form-control" />
                            <span asp-validation-for="NumeroPaginas" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Quantidade" class="form-label"></label>
                            <input asp-for="Quantidade" class="form-control" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Capa Atual</label>
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(Model.UrlCapa))
                                {
                                    <img src="@Model.UrlCapa" alt="Capa do Livro" class="img-thumbnail" style="max-height: 200px;" />
                                }
                                else
                                {
                                    <span class="text-muted">Sem capa</span>
                                }
                            </div>
                            <label class="form-label">Trocar Capa</label>
                            <input type="file" name="CapaUpload" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Selecione uma imagem para atualizar a capa do livro.</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UrlCapa" class="form-label"></label>
                            <input asp-for="UrlCapa" class="form-control" readonly />
                            <span asp-validation-for="UrlCapa" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ISBN10" class="form-label"></label>
                            <input asp-for="ISBN10" class="form-control" />
                            <span asp-validation-for="ISBN10" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ISBN13" class="form-label"></label>
                            <input asp-for="ISBN13" class="form-control" />
                            <span asp-validation-for="ISBN13" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GeneroId" class="form-label"></label>
                            <select asp-for="GeneroId" class="form-select" asp-items="ViewBag.GeneroId"></select>
                            <span asp-validation-for="GeneroId" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <input type="submit" value="Salvar" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-link">Voltar para a lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
