@model Biblioteca.Models.Avaliacao

@{
    ViewData["Title"] = "Editar Avaliação";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-dark text-light text-center">
                    <h3 class="mb-0">Editar Avaliação</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="AvaliacaoId" />

                        <div class="mb-3">
                            <label asp-for="Nota" class="form-label"></label>
                            <input asp-for="Nota" class="form-control" min="1" max="5" type="number" />
                            <span asp-validation-for="Nota" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Comentario" class="form-label"></label>
                            <textarea asp-for="Comentario" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Comentario" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DataAvaliacao" class="form-label"></label>
                            <input asp-for="DataAvaliacao" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LivroId" class="form-label"></label>
                            <select asp-for="LivroId" class="form-select" asp-items="ViewBag.LivroId"></select>
                            <span asp-validation-for="LivroId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UsuarioId" class="form-label"></label>
                            <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId"></select>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                            <button type="submit" class="btn btn-dark">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
