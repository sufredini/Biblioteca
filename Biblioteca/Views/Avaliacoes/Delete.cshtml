@model Biblioteca.Models.Avaliacao

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Avaliacao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comentario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comentario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAvaliacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAvaliacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Livro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livro.LivroId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.UsuarioId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <h1 class="text-bg-danger">Tem certeza que deseja excluir sua avaliação?</h1>
        <input type="hidden" asp-for="AvaliacaoId" />
        <input type="submit" value="Delete" class="btn btn-sm btn btn-dark" /> |
        <a asp-action="Index" class="btn btn-sm btn btn-dark">Voltar</a>
    </form>
</div>
